    <mj-style> .mobileView { display: none; } .desktopView { display: block; } .footer{min-height:190px;} .footer > div > table{ background: none !important; } .footer > div > table > tbody > tr > td{ padding: 135px 60px 0px 115px !important } .xs-right, td.xs-right{text-align:right !important;} @media only screen and (max-width:480px){ .footer{min-height:80px;} .footer > div > table > tbody > tr > td { padding: 10px 5px 0px 0px !important; } .mobileView { display: block;} .desktopView { display: none !important; } .xs-right, td.xs-right{text-align:left !important;} .header-logo{ margin-bottom:15px; margin-right:0 !important;} .header > div{ font-size: 22px !important; line-height: 30px !important;} .foooter-text {font-size: 12px}} </mj-style>
